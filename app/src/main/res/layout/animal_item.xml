<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/cream"
        android:layout_margin="8dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <TextView
                android:id="@+id/tvScientificName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Scientific Name"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:padding="8dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/tvLocations"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Locations"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:padding="8dp"
                app:layout_constraintTop_toBottomOf="@id/tvScientificName"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/tvPopulationSize"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Estimated Population Size"
                android:padding="8dp"
                app:layout_constraintTop_toBottomOf="@id/tvLocations"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/tvBiggestThreat"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Biggest Threat"
                android:padding="8dp"
                app:layout_constraintTop_toBottomOf="@id/tvPopulationSize"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/tvTopSpeed"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Top Speed"
                android:padding="8dp"
                app:layout_constraintTop_toBottomOf="@id/tvBiggestThreat"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/tvLifespan"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Lifespan"
                android:padding="8dp"
                app:layout_constraintTop_toBottomOf="@id/tvTopSpeed"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>
